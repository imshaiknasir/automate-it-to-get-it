USER_EMAIL=youremail@job.com
USER_PASSWORD=your_password

# Preferred location used by automation when toggling Naukri career preferences
# If not set, the script defaults to "Kolkata"
NAUKRI_TOGGLE_CITY=Kolkata

# CV/Resume Configuration (Optional - for automatic CV upload)
# Encode your resume files to base64 using: node scripts/prepare-cv.js path/to/resume.pdf
# Then add the base64 strings as GitHub Secrets (never commit actual CVs!)
# CV_FILE_1_BASE64=<base64-encoded-resume-content>
# CV_FILE_1_EXT=pdf
# CV_FILE_2_BASE64=<base64-encoded-resume-content>
# CV_FILE_2_EXT=pdf
# CV_FILE_3_BASE64=<base64-encoded-resume-content>
# CV_FILE_3_EXT=pdf
# The script will randomly select one CV per run for upload

# Proxy Configuration (Optional)
# Method 1: Download proxy list and randomly select one per session (RECOMMENDED)
PROXY_LIST_URL=https://proxy.webshare.io/api/v2/proxy/list/download/YOUR_TOKEN/-/any/username/direct/-/?plan_id=YOUR_PLAN_ID

# Method 2: Use a single static proxy (Fallback)
# PROXY_SERVER=http://142.111.48.253:7030

# Telegram Bot Configuration (Optional - for log notifications)
# Leave these blank to disable Telegram notifications entirely.
# See README for bot creation and chat ID instructions.
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ATTACH_EXECUTION_LOG=false

# Log and Video Retention Configuration
# Number of days to retain log files before automatic cleanup
LOG_RETENTION_DAYS=14

# Number of days to retain video recordings before automatic cleanup
# Videos are recorded for every automation run and cleaned up weekly
VIDEO_RETENTION_DAYS=7
